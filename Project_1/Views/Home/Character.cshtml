@using Project_1.Models;
@using RestSharp;
@model CharacterDB

<ul class="breadcrumb">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Character Roster</a></li>
    <li class="breadcrumb-item active"><a href="#">Character</a></li>
</ul>
<div class="marvel">
    <div class="row justify-content-center">
        <div class="col-6">
            <div class="card">
                <img class="card-img-top" src=@(Model.ThumbnailURL == null ? "../../Content/Images/NoImageFound.png" : (Model.ThumbnailURL)) alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">Character Name</h5>
                    <p class="card-text">@Model.Name</p>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Character Description</h5>
                    <p class="card-text">@(Model.Description == "" ? "No Description Available" : Model.Description)</p>
                </div>
                <div class="card-body">
                    <a href="@(Model.URL == null ? "#" : Model.URL)" class="card-link">@(Model.URL == null ? "No Wiki Link Available" : "Wiki Link")</a>
                </div>
                <div class="card-body">
                    <a type="button" href="@Url.Action("DeleteCharacter", "Home" , new { id = Model.CharacterID })" class="btn btn-danger float-right">Delete Character</a>
                    <a type="button" href="@Url.Action("EditCharacter", "Home" , new { id = Model.CharacterID })" class="btn btn-success">Edit Character</a>
                </div>
            </div>
        </div>
    </div>
</div>

