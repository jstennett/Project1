@using Project_1.Models;
@using RestSharp;
@model Character

<div class="row justify-content-center">
    <div class="col-8">
        <div class="card buffer" style="padding: 10px;">
            <div class="row justify-content-center">
                <div class="col-6">
                    <div class="card">
                        <img class="card-img-top" src=@(Model.Thumbnail.Path + ".jpg") style="height: 200px;" alt="Card image cap">
                        <div class="card-body">
                            <p class="card-text">@Model.Name</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

