@{
    ViewBag.Title = "SignUp";
}

<div class="row justify-content-center" style="margin-top: 10px;">
    <div class="col-8">
        <div class="card">
            <h3 class="card-header">Sign Up</h3>
            <div class="card-body">
                @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
                {
                    <div class="form-row justify-content-center">
                        <div class="form-group col-6">
                            <label for="Name">First Name</label>
                            <input type="text" class="form-control" name="FirstName" id="FirstName" placeholder="First Name">
                        </div>
                        <div class="form-group col-6">
                            <label for="Name">Last Name</label>
                            <input type="text" class="form-control" name="LastName" id="LastName" placeholder="Last Name">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="Name">Email</label>
                        <input type="text" class="form-control" name="Email" id="Address" placeholder="Email">
                    </div>
                    <div class="form-group">
                        <label for="Name">Password</label>
                        <input type="password" class="form-control" name="Password" id="Address" placeholder="Password">
                    </div>
                    <div class="form-row">
                        <div class="col-3">
                            <button type="submit" class="btn btn-default">Submit</button>
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
