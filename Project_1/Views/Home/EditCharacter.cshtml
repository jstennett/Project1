@model Project_1.Models.CharacterDB

@{
    ViewBag.Title = "EditCustomer";
}

<div class="row justify-content-center" style="margin-top:10px;">
    <div class="col-8">
        <div class="card">
            <h3 class="card-header">Edit Character</h3>
            <div class="card-body">
                @using (Html.BeginForm("EditCharacter", "Home", FormMethod.Post))
                {
                    @Html.Hidden("CharacterID", Model.CharacterID);

                    <div class="form-group">
                        <label for="Name">Name</label>
                        <input type="text" class="form-control" value="@Model.Name" name="Name" id="Address" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <label for="Description">Description</label>
                        <textarea class="form-control" id="Description" name="Description" placeholder="Got bit by a radioactive spider blah blah blah" rows="3">@Model.Description</textarea>
                    </div>
                    <div class="form-group">
                        <label for="Name">Image URL</label>
                        <input type="text" class="form-control" value="@Model.ThumbnailURL" name="ThumbnailURL" id="Address" placeholder="Image URL">
                    </div>
                    <div class="form-group">
                        <label for="Name">Wiki Link</label>
                        <input type="text" class="form-control" value="@Model.URL" name="URL" id="URL" placeholder="Wiki Link">
                    </div>
                    <div class="form-row justify-content-center">
                        <div class="col-3">
                            <button type="submit" class="btn btn-danger">Save Changes</button>
                        </div>
                    </div>
                    <div class="form-row justify-content-center">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>



